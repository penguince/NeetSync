{
  "manifest_version": 3,
  "name": "NeetSync",
  "version": "1.0.0",
  "description": "Sync your NeetCode submissions to GitHub automatically",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "optional_permissions": [
    "notifications"
  ],
  "host_permissions": [
    "https://neetcode.io/*",
    "https://api.github.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://neetcode.io/problems/*"],
      "js": ["content/neetcode_problem.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://neetcode.io/practice*",
        "https://neetcode.io/roadmap*"
      ],
      "js": ["content/neetcode_catalog.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content/inject_editor_bridge.js"],
      "matches": ["https://neetcode.io/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "NeetSync"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
